{
  "compilerOptions": {
    "target": "ES2015",
    "jsx": "react",
    "declaration": true,
    "sourceMap": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "moduleResolution": "bundler",
    "lib": ["esnext", "DOM"],
    "ignoreDeprecations": "6.0"
  },
  "exclude": ["dist", "node_modules", "docs"]
}
